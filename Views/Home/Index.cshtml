@model List<Blog>

<div class="container mt-4 ">
        <div class="row">
            <div class="col-md-8">
                @foreach (Blog item in Model)
            {
                <div class="blog-post">
                    <h2>@item.title</h2>
                    <p class="text-muted">Published on January 1, 2023</p>
                    <p>@item.content</p>
                    <a asp-action="showBlog" asp-controller="home" class="btn btn-primary" asp-route-ID="@item.ID">Read more</a>
                </div>
            }
                

            </div>
        </div>
    </div>