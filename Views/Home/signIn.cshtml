@model User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        .sign-in-container {
            max-width: 400px;
            width: 100%;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>

    <div class="sign-in-container">
        <h2 class="mb-4">Sign In</h2>
        <form id="signInForm" asp-action="signIn" asp-controller="home" method="post">
            <div class="mb-3">
                <label asp-for="name" class="form-label">Name</label>
                <input required type="text" asp-for="name" class="form-control" id="name" name="name" placeholder="Ali">
            </div>
            <div class="mb-3">
                <label asp-for="surname" class="form-label">Surname</label>
                <input required type="text"asp-for="surname" class="form-control" id="surname" name="surname" placeholder="Yilmaz">
            </div>
            <div class="mb-3">
                <label asp-for="email" class="form-label">Email Adress</label>
                <input required type="email" asp-for="email" class="form-control" id="email" name="email" placeholder="aliyilmaz@hotmail.com">
            </div>
            <div class="mb-3">
                <label asp-for="password" class="form-label">Password</label>
                <input reqired type="password" asp-for="password" class="form-control" id="password" name="password">
            </div>
            <button type="submit" class="btn btn-primary" >Sign In</button>
        </form>
    </div>



</body>
</html>
